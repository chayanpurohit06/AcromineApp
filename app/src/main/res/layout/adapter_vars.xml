<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="items"
            type="com.app.acromine.model.Vars" />

    </data>

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:elevation="8dp"
        app:cardCornerRadius="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/lf_var_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:background="#D3FFFFFF"
                android:lines="1"
                android:maxLines="1"
                android:padding="8dp"
                android:text="@{`Lfs : - ` +items.lf}"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/freq_var_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#D3FFFFFF"
                android:lines="1"
                android:maxLines="1"
                android:padding="8dp"
                android:text="@{`Freq : - ` +Integer.toString(items.freq)}"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/since_var_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#D3FFFFFF"
                android:lines="1"
                android:maxLines="1"
                android:padding="8dp"
                android:text="@{`Since : - ` +Integer.toString(items.since)}"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:textSize="18sp" />


        </LinearLayout>
    </androidx.cardview.widget.CardView>

</layout>